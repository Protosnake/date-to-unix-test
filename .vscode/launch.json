  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Integration Test: Current File",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "test",
        "--prefix",
        "testing/integration",
        "--",
        "${file}"
      ],
      "skipFiles": ["<node_internals>/**"],
      "outFiles": ["${workspaceFolder}/**/*.js"]
    }
  ]
}
